{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "sourceMap": true,

    "target": "ESNext",

    "outDir": "./dist",
    "baseUrl": "./",

    "lib": ["ESNext", "ESNext.AsyncIterable"],

    "declaration": false,
    "removeComments": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "paths": {
      "@/*": ["src/*"]
    },

    "incremental": true,
    "skipLibCheck": true
  },
  "include": [
    "environment.d.ts",
    "src/**/*.ts",
    "test/**/*.ts",
    "prisma/**/*.ts"
  ]
}
