{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["clean", "^db:generate", "^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "dependsOn": ["^db:generate"],
      "cache": false
    },
    "web#build": {
      "dependsOn": ["^database#build", "^build"],
      "outputs": [".next/**"],
      "env": ["NEXT_PUBLIC_API_URL", "NEXT_PUBLIC_WEB_URL"]
    },
    "api#dev": {
      "dependsOn": ["^database#build", "^build"],
      "outputs": ["dist/**"]
    },
    "api#build": {
      "dependsOn": ["^database#build", "^build"],
      "outputs": ["dist/**"],
      "env": [
        "NODE_ENV",
        "PORT",
        "SESSION_SECRET",
        "APP_URL",
        "CORS_ORIGIN",
        "DISCORD_CLIENT_SECRET",
        "DISCORD_CLIENT_ID",
        "DISCORD_CALLBACK_URL",
        "POSTGRES_PASSWORD",
        "POSTGRES_USER",
        "POSTGRES_DB",
        "DATABASE_URL",
        "REDIS_HOST",
        "REDIS_PORT",
        "REDIS_URL",
        "UPLOADS_PATH",
        "MAX_FILE_UPLOAD_SIZE"
      ]
    },

    "database#generate": {
      "env": ["POSTGRES_PASSWORD", "POSTGRES_USER", "POSTGRES_DB"]
    }
  },
  "globalDependencies": [],
  "globalEnv": ["NODE_ENV"]
}
